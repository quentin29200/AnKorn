<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}{{'Welcome' | trans}} !{% endblock %}</title>
        {% block stylesheets %}
        {% stylesheets 'css/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        {% endblock %}
        <script type="text/javascript" src="{{ asset('jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bootstrap.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('pa_general_accueil') }}">An Korn</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="{{ path('pa_general_accueil') }}">{{'Accueil_title'|trans}}</a>
                        </li>
                        <li>
                            <a href="{{path('pa_general_offres')}}">{{'Offres_title'|trans}}</a>
                        </li>
                        <li>
                            <a href="{{path('pa_general_demandes')}}">{{'Demandes_title'|trans}}</a>
                        </li>
                        <li>
                            <a href="{{ path('pa_general_mes_annonces') }}">{{'Mes_annonces_title'|trans}}</a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">{{ 'Mon_compte_title'|trans}} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="{{path('pa_general_mon_panier')}}">{{'Mon_compte_panier_title'|trans}}</a>
                                </li>
                                <li>
                                    <a href="{{path('pa_general_mon_compte')}}">{{'Mon_compte_espace_title'|trans}}</a>
                                </li>
                                <li>
                                    <hr />
                                </li>
                                <li>
                                    <a href="{{path('pa_general_deconnexion')}}">{{'Mon_compte_deconnexion_title'|trans}}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
        {% block body %}{% endblock %}
        <!-- Footer -->
        <div class="container">
            <hr>
            <footer>
                <div align=center>
                    <p>{{ 'footer_text_1' | trans }}</p>
                    <p>{{ 'footer_text_2' | trans }}</p>
                    <p><a href="{{ path('pa_general_mentions') }}">{{ 'mentions_footer_title' | trans }}</a> - <a href="{{ path('pa_general_contact') }}">{{ 'contact_footer_title' | trans }}</a></p>
                </div>
            </footer>
        </div>
    </body>
</html>
