{% extends "::base.html.twig" %}
{% block body %} 
	<!-- Header Carousel -->
	<header id="myCarousel" class="carousel slide">
	<!-- Indicators -->
	<ol class="carousel-indicators">
	    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	    <li data-target="#myCarousel" data-slide-to="1"></li>
	    <li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
	    <div class="item active">
	        <div class="fill" style="background-image:url(' {{ asset('/anKorn/web/bundles/pageneral/images/slider-1.jpeg')}} ');"></div>
	        <div class="carousel-caption">
	            <h2>{{'Legend_slide1' | trans}}</h2>
	        </div>
	    </div>
	    <div class="item">
	        <div class="fill" style="background-image:url(' {{ asset('/anKorn/web/bundles/pageneral/images/slider-2.jpeg')}} ');"></div>
	        <div class="carousel-caption">
	            <h2>{{'Legend_slide2' | trans}}</h2>
	        </div>
	    </div>
	    <div class="item">
	        <div class="fill" style="background-image:url(' {{ asset('/anKorn/web/bundles/pageneral/images/slider-3.jpeg')}} ');"></div>
	        <div class="carousel-caption">
	            <h2>{{'Legend_slide3' | trans}}</h2>
	        </div>
	    </div>
	</div>

	<!-- Controls -->
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
	    <span class="icon-prev"></span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
	    <span class="icon-next"></span>
	</a>
	</header>

	<!-- Page Content -->
	<div class="container">

	<!-- Marketing Icons Section -->
	<div class="row">
	    <div class="col-lg-12">
	        <h1 class="page-header">
	            {{'message_bienvenue_top' | trans}}
	        </h1>
	        <p>{{ 'fil_ariane_text' | trans }}<a title="Accueil_title" href="{{ path('pa_general_accueil') }}">{{ 'Accueil_title' | trans }}</a></p>
	        <hr />
	    </div>
	    <div class="col-md-4">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h4><i class="fa fa-fw fa-check"></i>{{'panel_heading_1_title' | trans}}</h4>
	            </div>
	            <div class="panel-body">
	                <p>{{'panel_heading_1_content' | trans}}</p>
	                <a href="{{ path('pa_annonce_afficher_offre') }}" class="btn btn-default">{{ 'panel_heading_btn' | trans }}</a>
	            </div>
	        </div>
	    </div>
	    <div class="col-md-4">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h4><i class="fa fa-fw fa-gift"></i>{{'panel_heading_2_title' | trans}}</h4>
	            </div>
	            <div class="panel-body">
	                <p>{{'panel_heading_2_content' | trans}}</p>
	                <a href="{{ path('pa_annonce_afficher_demande') }}" class="btn btn-default">{{ 'panel_heading_btn' | trans }}</a>
	            </div>
	        </div>
	    </div>
	    <div class="col-md-4">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h4><i class="fa fa-fw fa-compass"></i>{{'panel_heading_3_title' | trans}}</h4>
	            </div>
	            <div class="panel-body">
	                <p>{{'panel_heading_3_content' | trans}}</p>
	                <a href="{{ path('pa_general_mon_compte') }}" class="btn btn-default">{{ 'panel_heading_btn' | trans }}</a>
	            </div>
	        </div>
	    </div>
	</div>
	<!-- /.row -->

	<!-- Portfolio Section -->
	<div class="row">
	    <div class="col-lg-12">
	        <h2 class="page-header">{{'annonces_portfolio_title' | trans }}</h2>
	    </div>
	    {% if entities is not empty %}
	    {% for entity in entities %}
		    <div class="col-md-4 col-sm-6">
		    	<h4>{{entity.antitre}}</h4>
		        <a href="portfolio-item.html">
		            <img class="img-responsive img-portfolio img-hover" src="{{ entity.animage }}" alt="">
		        </a>
		        {{ entity.andescription }}
		    </div>
		{% endfor %}
	    {% else %}
	    {{'no_result_annonces' | trans}}
	    {% endif %}
	</div>
	<!-- /.row -->

	</div>
	<!-- /.container -->
{% endblock %}