{% extends "::base.html.twig" %}
{% block body %} 
	<!-- Header Carousel -->
	<header id="myCarousel" class="carousel slide">
	<!-- Indicators -->
	<ol class="carousel-indicators">
	    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	    <li data-target="#myCarousel" data-slide-to="1"></li>
	    <li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
	    <div class="item active">
	        <div class="fill" style="background-image:url(' {{ asset('/anKorn/web/bundles/pageneral/images/slider-1.jpeg')}} ');"></div>
	        <div class="carousel-caption">
	            <h2>{{'Legend_slide1' | trans}}</h2>
	        </div>
	    </div>
	    <div class="item">
	        <div class="fill" style="background-image:url(' {{ asset('/anKorn/web/bundles/pageneral/images/slider-2.jpeg')}} ');"></div>
	        <div class="carousel-caption">
	            <h2>{{'Legend_slide2' | trans}}</h2>
	        </div>
	    </div>
	    <div class="item">
	        <div class="fill" style="background-image:url(' {{ asset('/anKorn/web/bundles/pageneral/images/slider-3.jpeg')}} ');"></div>
	        <div class="carousel-caption">
	            <h2>{{'Legend_slide3' | trans}}</h2>
	        </div>
	    </div>
	</div>

	<!-- Controls -->
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
	    <span class="icon-prev"></span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
	    <span class="icon-next"></span>
	</a>
	</header>

	<!-- Page Content -->
	<div class="container">

	<!-- Marketing Icons Section -->
	<div class="row">
	    <div class="col-lg-12">
	        <h1 class="page-header">
	            {{'message_bienvenue_top' | trans}}
	        </h1>
	        <p>{{ 'fil_ariane_text' | trans }}<a title="Accueil_title" href="{{ path('pa_general_accueil') }}">{{ 'Accueil_title' | trans }}</a></p>
	        <hr />
	    </div>
	    <div class="col-md-4">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h4><i class="fa fa-fw fa-car"></i>{{'panel_heading_1_title' | trans}}</h4>
	            </div>
	            <div class="panel-body">
	                <p>{{'panel_heading_1_content' | trans}}</p>
	                <a href="{{ path('pa_annonce_afficher_offre') }}" class="btn btn-default">{{ 'panel_heading_btn' | trans }}</a>
	            </div>
	        </div>
	    </div>
	    <div class="col-md-4">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h4><i class="fa fa-fw fa-book"></i>{{'panel_heading_2_title' | trans}}</h4>
	            </div>
	            <div class="panel-body">
	                <p>{{'panel_heading_2_content' | trans}}</p>
	                <a href="{{ path('pa_annonce_afficher_demande') }}" class="btn btn-default">{{ 'panel_heading_btn' | trans }}</a>
	            </div>
	        </div>
	    </div>
	    <div class="col-md-4">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h4><i class="fa fa-fw fa-child"></i>{{'panel_heading_3_title' | trans}}</h4>
	            </div>
	            <div class="panel-body">
	                <p>{{'panel_heading_3_content' | trans}}</p>
	                <a href="{{ path('pa_general_mon_compte') }}" class="btn btn-default">{{ 'panel_heading_btn' | trans }}</a>
	            </div>
	        </div>
	    </div>
	</div>
	<!-- /.row -->

	<!-- Search Section -->
	<h3>Utilisateurs</h3>	
	<form role="form">
		<div class="row">
			<div class="col-md-12">
				<!-- Ad name (text) section -->
				<div class="form-group">
					<label for="index_form_text">{{ 'index_form_text' | trans }}</label>	
					<input id="index_form_text" placeholder="{{ 'index_form_pH_text' | trans }}" type="text" class="form-control" />
				</div>
			</div>
		</div>
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
					<button type="button" class="btn btn-primary spoiler-trigger" data-toggle="collapse">{{ 'index_form_spoiler' | trans }}</button>
				</div>
				<div class="panel-collapse collapse out">
					<div class="panel-body">
						<div class="row">
							<div class="col-md-6">
								<!-- Department filter (select list) section -->
								<div class="form-group">
									<label for="index_form_dept">{{ 'index_form_dept' | trans }}</label>
									<select class="form-control" id="index_form_dept">
										<option value="armor">22 .Côtes d'armor</option>
										<option value="finistere">29. Finistère</option>
										<option value="ile">35. Ile et Vilaine</option>
										<option value="morbihan">56. Morbihan</option>
									</select>
								</div>
							</div>
							<div class="col-md-6">
								<!-- Category filter (select list) section -->
						        <div class="form-group">
							        <label for="index_form_cat">{{ 'index_form_cat' | trans }}</label>
						        	<select class="form-control" id="index_form_cat">
						        		<option value="1">Automobile</option>
						        	</select>
						        </div>
							</div>
						</div>
						<div class="row"><br />
							<div class="form-group">
								<!-- Sector filter (checkbox) section -->
								<div class="checkbox">
									<div class="col-md-2">
										<label>{{ 'index_form_sector' | trans }}</label>
									</div>
									<div class="col-md-7">
										<label for="index_from_cb_1">
											<input id="index_from_cb_1" type="checkbox" /> {{ 'index_form_sector1' | trans }} 
										</label>
										<label for="index_from_cb_1">
											<input id="index_from_cb_1" type="checkbox" /> {{ 'index_form_sector1' | trans }} 
										</label>
										<label for="index_from_cb_1">
											<input id="index_from_cb_1" type="checkbox" /> {{ 'index_form_sector1' | trans }} 
										</label>
										<label for="index_from_cb_1">
											<input id="index_from_cb_1" type="checkbox" /> {{ 'index_form_sector1' | trans }} 
										</label>
										<label for="index_from_cb_1">
											<input id="index_from_cb_1" type="checkbox" /> {{ 'index_form_sector1' | trans }} 
										</label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-md-12 form-inline">
		        <!-- Reset and submit buttons section -->
		        <div class="pull-right">
					<button type="reset" class="btn btn-default">Réinitialiser</button>
					<button type="submit" class="btn btn-success">Rechercher !</button>
				</div>
			</div>
		</div>
	</form>

	<!-- Display section -->
	<div class="row">
	    <div class="col-lg-12">
	        <h2 class="page-header">{{'annonces_portfolio_title' | trans }}</h2>
	    </div>
	    {% if annonces is not empty %}
	    {% for annonce in annonces %}
		    <div class="col-md-4 col-sm-6">
		        <div class="thumbnail">
			        <a href="{{ annonce.animage }}">
			            <img class="img-responsive img-portfolio img-hover" src="{{ annonce.animage }}" alt="">
			        </a>
				    <div class="text-center">
		        		<h3>{{annonce.antitre}}<br />
				        	<small>{{ annonce.andescription }}</small>
				        </h3>
				        <b>{{ annonce.anprix }} €</b>
				        <div class="clear"></div>
                        <ul class="list-inline">
                            <li><a href="#" class="btn btn-primary" role="button"><i class="fa fa-fw fa-info"></i>{{ 'button_voir_detail' | trans }}</a></li>
                            {% if is_granted('ROLE_ADMIN') or ((is_granted('ROLE_USER') and ( app.user.id == annonce.anuser ))) %}
	                            	<li><a href="{{ path('pa_annonce_modifier', {'id': annonce.anid}) }}" class="btn btn-warning" role="button"><i class="fa fa-fw fa-gear"></i>{{ 'button_edit_ads' | trans }}</a></li>
                            {% endif %}
                        </ul>
				    </div>
				</div>
	   		</div>
		{% endfor %}
	    {% else %}
	    {{'no_result_annonces' | trans}}
	    {% endif %}
	</div>
	<!-- /.row -->

	</div>
	<!-- /.container -->

	<!-- Spoiler code -->
	<script type="text/javascript">
	$(".spoiler-trigger").click(function() {
		$(this).parent().next().collapse('toggle');
	});
	</script>

{% endblock %}