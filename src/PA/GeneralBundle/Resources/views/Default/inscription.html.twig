{% extends "::base.html.twig" %}
{% block body %}
	<!-- Page Content -->
	<div class="container">

	<!-- Marketing Icons Section -->
	<div class="clear"></div>
	<!-- /.row -->

	<!-- =========== -->
	<!-- Ads Section -->
	<!-- =========== -->

	<!-- First section -->
	<div class="row">
		<h2>{{ 'connexion_welcome' | trans }}</h2>
	    <p>{{ 'fil_ariane_text' | trans }}<a title="Accueil_title" href="{{ path('pa_general_accueil') }}">{{ 'Accueil_title' | trans }}</a> >> <a href="{{ path('pa_general_inscription') }}">{{ 'Inscription_title' | trans }}</a></p>
		<!-- /.row -->

		<div class="clear"></div>
		<!-- Display Content just if the user is connected -->
		{% if is_granted('ROLE_USER') %}
			<p>{{ 'connexion_already_connected' | trans }}</p>
			<ul>
				<li><a href="{{ path('pa_general_offres') }}">{{ 'Offres_title' | trans }}</a></li>
				<li><a href="{{ path('pa_general_demandes') }}">{{ 'Demandes_title' | trans }}</a></li>
				<li><a href="{{ path('pa_general_mes_annonces') }}">{{ 'Mes_annonces_title' | trans }}</a></li>
				<li><a href="{{ path('pa_general_deconnexion') }}">{{ 'deconnexion_title' | trans }}</a></li>
			</ul>
		<!-- If the user is not connnected -->
		{% else %}
			<!-- <div class="col-md-4 col-sm-6"> -->
			<div class="page-header">
				<p>{{ 'connexion_please_connect_or_suscribe' | trans }}</p>
				<div class="clear"></div>
				<div class="container">					
					<div class="row">
						   <div class="main">
						        <div class="col-xs-12 col-sm-6 col-sm-offset-1">
						        	<fieldset>
						        		<legend>{{ 'connexion_title' | trans }}</legend>
							            <form action="/users/login" name="login" role="form" class="form-horizontal" method="post" accept-charset="utf-8">
							                <div class="form-group">
							                	<div class="col-md-8">
							                		<label for="username">{{ 'connexion_form_id' | trans }} :</label>
							                		<input name="username" placeholder="Idenfiant" class="form-control" type="text" id="UserUsername"/>
							                	</div>
							                </div>
							                <div class="form-group">
							                	<div class="col-md-8">
							                		<label for="password">{{ 'connexion_form_pw' | trans }} :</label>
							                		<input name="password" placeholder="Mot de passe" class="form-control" type="password" id="UserPassword"/>
							                	</div>
							                </div>
							                <div class="form-group">
							                	<div class="col-md-offset-0 col-md-8">
							                		<input  class="btn btn-success btn btn-success" right="submit" value="Connexion"/>
							                	</div>
							                </div>
							            </form>
						        	</fieldset>
						        </div>
						        <div class="col-md-4 col-sm-6">
						        	<fieldset style="margin-bottom: -15px;">
						        		<legend>{{ 'suscribe_title' | trans }}</legend>
							        	<p>{{ 'suscribe_on_connexion_page' | trans }}</p>
							        	<a href="{{ path('pa_general_inscription') }}">{{ 'suscribe_go' | trans }}</a>
						        	</fieldset>
						        </div>
						    </div>
						</div>
					</div>
				</div>
			</div>
		{% endif %}
		</div>
	</div>
	<!-- /.container -->
{% endblock %}